<%- include('partials/header') -%>
<div id="evoCalendar"></div>
  
<input id="addEventID" type="text" placeholder="Event Name">
<button id="addEventBtn">Add Event</button>

<script src="/jquery-3.6.4.slim.min.js"></script>
<script src="https://cdn.tailwindcss.com"></script>
<script type="text/javascript" src="/cal.js"></script>
<script src="/evo-calendar.js"></script>
<script type="text/javascript" defer> 
const events = <%-JSON.stringify(events)%>
const myEvents = [
  {
    id: "required-id-1",
    name: "New Year",
    date: "Wed Jan 01 2020 00:00:00 GMT-0800 (Pacific Standard Time)",
    type: "holiday",
    everyYear: true
  },
  {
    id: "required-id-2",
    name: "Valentine's Day",
    date: "Fri Feb 14 2020 00:00:00 GMT-0800 (Pacific Standard Time)",
    type: "holiday",
    everyYear: true,
    color: "#222"
  },
  // more events here
]
for(let i=0; i < events.length; i++){
  myEvents.push({name: events[i].eventName, date: events[i].date, id: events[i]._id, type: "normal", everyYear: false, color: "#222"} )
}
console.log('myevents', myEvents)

$('#evoCalendar').evoCalendar({
  calendarEvents: myEvents
});

</script>

<%- include('partials/footer') -%>