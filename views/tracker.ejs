<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
	<link rel="stylesheet" href="assets/css/main.css" />
  <title>Mindful Yogi</title>
  <link rel="icon" href="images/yoga.jpg">
</head>
<body class="is-preload">

    <!-- Header -->
      <header id="header">
        <h1><a href="/feed">Mindful Yogi</a></h1>
        <nav class="links">
          <ul>
            <li><a href="/tracker">DAILY LOG</a></li>
            <li><a href="/seq/media">MY MEDIA</a></li>
            <li><a href="/cal">CALENDAR</a></li>
            <li><a href="/profile">PROFILE</a></li>
            <li><a href="/seq">SEQUENCES</a></li>
            <li><a href="/faq">FAQ</a></li>
          </ul>
        </nav>
        <nav class="main">
          <ul>
              <li>
                  <a class="fa-search">Search</a>
                  <form>
                      <input type="text" id="searchid" name="category" placeholder="Search" />
                  </form>
              </li>
          </ul>
      </nav>
      </header>
  
      <% for(let i=0; i<tracker.length; i++) {%>
        <section>
          <ul class="posts">
            <li>
              <article>
                <header>
                  <h3><%= tracker[i].log.trim()%></h3>
                  <time class="published" datetime="2015-10-20"><%=tracker[i].date.toISOString().split('T')[0]%></time>
                  <p><%=user.userName%></p>
                </header>
                <a href="single.html" class="image">
                  <img src="<%user.profilePic%>" alt="" />
                </a>
                <!-- Delete Button -->
                <form action="/tracker/<%=tracker[i]._id%>?_method=DELETE" method="POST">
                <button id="trackerBtn" class="btn btn-danger" type="submit"><i class="fa fa-trash" aria-hidden="true"></i></button>
                </form>
              </article>
            </li>
          </ul>
        </section>
      <% } %>


    <% if (user.email) {
      const today = new Date()
      %>
      <form class="mt-3" action="/tracker" method="POST">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Enter Log" name="log">
          <input type="date" value="<%=today.toISOString().split('T')[0]%>"class="form-control" name="date">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    <% } %>
  </div>

</body>
</html>